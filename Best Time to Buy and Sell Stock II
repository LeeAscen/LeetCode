class Solution(object):
    def maxProfit(self, prices):
        """
        :type prices: List[int]
        :rtype: int
        """
        if len(prices)<2:
            return 0
        profit = 0; maxprofit = 0
        buy = prices[0]
        for i in range(1,len(prices)):
            if prices[i]<prices[i-1]:
                profit = max(profit, prices[i-1]-buy)
                maxprofit += profit
                buy = prices[i]
                profit = 0
            elif i== len(prices)-1:
                profit = max(profit, prices[i]-buy)
                maxprofit += profit
            
        return maxprofit
                
                
            
